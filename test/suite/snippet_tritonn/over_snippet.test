register normalizers/yamysql
register functions/snippet_tritonn

normalize NormalizerYaMySQLSymbol "実践!!C++" WITH_TYPES|WITH_CHECKS

table_create Entries TABLE_NO_KEY
column_create Entries content COLUMN_SCALAR ShortText

table_create Tokens TABLE_PAT_KEY ShortText --default_tokenizer TokenBigram --normalizer NormalizerYaMySQLSymbol
column_create Tokens entries_content COLUMN_INDEX|WITH_POSITION Entries content

load --table Entries
[
{"content": "実践!!C++入門"}
]

select Entries \
  --output_columns 'snippet_tritonn(content, 200, 2, \
  "NormalizerYaMySQLSymbol", \
  0, 0, "...", "...", \
  "C",  "<span class=\\"w1\\">", "</span>"), content' \
  --command_version 2 \
  --match_columns 'content' \
  --query "C"
